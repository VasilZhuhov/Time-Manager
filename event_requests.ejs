    <h1 class="d-flex justify-content-center">Event Requests</h1>

    <div class="containers d-flex justify-content-center">
        <div class="row">
            <div class="col-md">
                <div class="people-nearby">

                    <div class="nearby-user">
                        <div class="row">
                            <div class="col-md-9 col-sm-9">
                                <h5><a href="#" class="profile-link">Running</a></h5>
                                <small class="d-block mb-1"><i class="fas fa-clock"></i> 11:20 - 12:20</small>
                                <small class="d-block mb-1"><i class="fas fa-users"></i> Participants: <a href="">3</a></small>
                                <small class="d-block mb-1"><i class="fas fa-user"></i> Created by: vzhuhov@gmail.com</small>
                                <span><i class="fas fa-map-marker-alt"></i> Asenovgrad, Stadion Shipka</span>
                            </div>
                            <div class="col-md-3 col-sm-3">
                                <button class="btn btn-sm btn-outline-success float-right"
                                    style="width: 80px; margin-bottom: 5px;">Approve</button>
                                <button class="btn btn-sm btn-outline-danger float-right"
                                    style="width: 80px;">Ignore</button>
                            </div>
                        </div>
                    </div>

                    <div class="nearby-user">
                        <div class="row">
                            <div class="col-md-9 col-sm-9">
                                <h5><a href="#" class="profile-link">Volleyball game</a></h5>
                                <small class="d-block mb-1"><i class="fas fa-clock"></i> 17:30 - 18:30</small>
                                <small class="d-block mb-1"><i class="fas fa-users"></i> Participants: <a href="">12</a></small>
                                <small class="d-block mb-1"><i class="fas fa-user"></i> Created by: ipetrov@gmail.com</small>
                                <span><i class="fas fa-map-marker-alt"></i> Sofia, sportna zala Hristo Botev</span>
                            </div>
                            <div class="col-md-3 col-sm-3">
                                <button class="btn btn-sm btn-outline-success float-right"
                                    style="width: 80px; margin-bottom: 5px;">Approve</button>
                                <button class="btn btn-sm btn-outline-danger float-right"
                                    style="width: 80px;">Ignore</button>
                            </div>
                        </div>
                    </div>

                    <div class="nearby-user">
                        <div class="row">
                            <div class="col-md-9 col-sm-9">
                                <h5><a href="#" class="profile-link">Data Structures and Algorithms Exercise</a></h5>
                                <small class="d-block mb-1"><i class="fas fa-clock"></i> 14:15 - 16:00</small>
                                <small class="d-block mb-1"><i class="fas fa-users"></i> Participants: <a href="">24</a></small>
                                <small class="d-block mb-1"><i class="fas fa-user"></i> Created by: niliev@gmail.com</small>
                                <span><i class="fas fa-map-marker-alt"></i> Sofia, Faculty of Mathematics and Informatics</span>
                            </div>
                            <div class="col-md-3 col-sm-3">
                                <button class="btn btn-sm btn-outline-success float-right"
                                    style="width: 80px; margin-bottom: 5px;">Approve</button>
                                <button class="btn btn-sm btn-outline-danger float-right"
                                    style="width: 80px;">Ignore</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

